{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Executar C no terminal",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/funcoes/funcs.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true, // <- ESSENCIAL para mostrar o terminal real
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Ativa a formatação padrão para gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
